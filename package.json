{
    "name": "azure-pipelines",
    "displayName": "Azure Pipelines",
    "description": "Syntax highlighting, Intellisense, and more for Azure Pipelines",
    "version": "1.139.0",
    "publisher": "ms-azure-devops",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/pipelines-vscode"
    },
    "homepage": "https://github.com/Microsoft/pipelines-vscode/blob/master/README.md",
    "bugs": "https://github.com/Microsoft/pipelines-vscode/issues/",
    "license": "MIT",
    "icon": "assets/pipelines.png",
    "galleryBanner": {
        "color": "#2C65E1",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:azure-pipelines"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "azure-pipelines",
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "azure-pipelines.yml",
                    "azure-pipelines.yaml",
                    ".vsts-ci.yml",
                    "vsts-ci.yml"
                ],
                "aliases": [
                    "Azure Pipelines"
                ]
            }
        ],
        "grammars": [
            {
                "language": "azure-pipelines",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "*.yml",
                "url": "./local-schema.json"
            }
        ],
        "configuration": {
            "title": "My extension configuration - TODO: Rename",
            "properties": {
                "yaml.validate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable validation feature"
                }
            }
        },
        "configurationDefaults": {
            "[azure-pipelines]": {
                "gitlens.codeLens.scopesByLanguage": [
                    {
                        "language": "azure-pipelines",
                        "scopes": [
                            "document"
                        ]
                    }
                ],
                "editor.insertSpaces": true,
                "editor.tabSize": 2,
                "editor.quickSuggestions": {
                  "other": true,
                  "comments": false,
                  "strings": true
                },
                "editor.autoIndent": false
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "removeschemastore": "node remove-schema-store-settings.js"
    },
    "devDependencies": {
        "typescript": "2.6.1",
        "vscode": "1.1.18",
        "tslint": "5.8.0",
        "ts-node": "3.3.0",
        "@types/node": "7.0.43",
        "@types/mocha": "2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "4.4.0",
        "vscode-nls": "3.2.4",
        "vscode-uri": "1.0.5",
        "yaml-language-server": "0.0.17"
    }
}
